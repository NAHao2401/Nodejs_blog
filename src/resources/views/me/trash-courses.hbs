<form
  name="container-form"
  method="post"
  action="/me/trash-handle-form-actions"
  class="mt-4"
>
  <div>
    <h3>Khóa học đã xóa</h3>
    <a href="/me/stored/courses" class="text-decoration-none">Danh sách khóa học</a>
    <div class="d-flex row g-2 align-items-center mt-4">
      <div class="col-auto">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="checkbox-all" />
          <label class="form-check-label" for="checkbox-all">Chọn tất cả</label>
        </div>
      </div>
      <div class="col-auto">
        <select
          class="form-control form-control-sm check-box-lenght"
          name="action"
          required
        >
          <option value="">-- Chọn hành động --</option>
          <option value="deleteForce">Xóa vĩnh viễn</option>
          <option value="restore">Khôi phục</option>
        </select>
      </div>

      <div class="col-auto">
        <button
          class="btn btn-primary btn-sm check-all-submit-btn disabled"
        >Thực hiện</button>
      </div>
    </div>
  </div>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col">Tên khóa học</th>
        <th scope="col">Trình độ</th>
        <th scope="col">Thời gian xóa</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <td class="text-center">
            <input
              class="custom-checkbox"
              type="checkbox"
              name="courseIds[]"
              value="{{this._id}}"
            />
          </td>

          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.deletedAt}}</td>
          <td>
            <a
              href=""
              class="btn btn-link btn-restore text-decoration-none"
              data-id="{{this._id}}"
            >Khôi phục</a>
            <a
              href=""
              class="btn btn-link text-decoration-none"
              data-bs-toggle="modal"
              data-id="{{this._id}}"
              data-bs-target="#delete-course-modal"
            >Xóa vĩnh viễn</a>
          </td>
        </tr>
      {{else}}
        <td colspan="5" class="text-center">Thùng rác trống.
          <a href="/me/stored/courses" class="text-decoration-none">Danh sách
            khóa học</a>
        </td>
      {{/each}}
    </tbody>
  </table>
</form>

{{!Confirm delete course}}

<div id="delete-course-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa khóa học này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa
          vĩnh viễn</button>

        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>
      </div>
    </div>
  </div>
</div>

<form name="restore-course-form" method="POST"></form>
<form name="delete-course-form" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function () { var restoreForm =
  document.forms['restore-course-form']; var containerForm =
  document.forms['container-form'];
  document.querySelectorAll('.btn-restore').forEach(function (btn) {
  btn.addEventListener('click', function (e) { e.preventDefault(); var courseId
  = this.getAttribute('data-id'); restoreForm.action = '/courses/' + courseId +
  '/restore?_method=PATCH'; restoreForm.submit(); }); }); var deleteForm =
  document.forms['delete-course-form']; var courseId; var exampleModal =
  document.getElementById('delete-course-modal')
  exampleModal.addEventListener('show.bs.modal', function (event) { var button =
  event.relatedTarget; courseId = button.getAttribute('data-id');}); var
  btnDeleteCourse = document.getElementById('btn-delete-course');
  btnDeleteCourse.onclick = function(){deleteForm.action = '/courses/' +
  courseId + '/force?_method=DELETE'; deleteForm.submit();}; var
  courseItemCheckbox = $('input[name="courseIds[]"]');var checkAllSubmitBtn =
  $('.check-all-submit-btn'); containerForm.addEventListener('submit',
  function(e) { var isSubmittable = !checkAllSubmitBtn.hasClass('disabled'); var
  actionSelect = $('select[name="action"]'); var bsModal = new
  bootstrap.Modal(exampleModal); if (!isSubmittable) { e.preventDefault();
  return;} if (actionSelect.val() === 'deleteForce') { e.preventDefault(); const
  checked = $('input[name="courseIds[]"]:checked').length; const $modal =
  $('#delete-course-modal'); const $modalbody = $modal.find('.modal-body'); let
  msg = 'Hành động này không thể khôi phục. Bạn vẫn muốn xóa khóa học đã chọn?';
  if(checked > 1) { msg = `Hành động này không thể khôi phục. Bạn vẫn muốn xóa
  ${checked} khóa học đã chọn?`; } $modalbody.text(msg); bsModal.show();
  btnDeleteCourse.onclick = null; btnDeleteCourse.addEventListener( 'click',
  function () { containerForm.submit(); }, { once: true } ); } }); var
  checkboxAll = $('#checkbox-all'); checkboxAll.change(function () { var
  isChecked = $(this).prop('checked'); courseItemCheckbox.prop('checked',
  isChecked); renderCheckAllSubmitBtn();});
  courseItemCheckbox.change(function(){ var isCheckedAll =
  courseItemCheckbox.length === $('input[name="courseIds[]"]:checked').length;
  checkboxAll.prop('checked', isCheckedAll); renderCheckAllSubmitBtn();});
  function renderCheckAllSubmitBtn(){ var checkedCount =
  $('input[name="courseIds[]"]:checked').length; if(checkedCount >
  0){checkAllSubmitBtn.removeClass('disabled')} else{
  checkAllSubmitBtn.addClass('disabled')}};});
</script>